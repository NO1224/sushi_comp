<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン情報入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可(必須)" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード(必須)" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-blue-btn" %>
  </div>
  <%= render "devise/shared/links" %>
</div>
<% end %>
